{
  "extends": "airbnb",
  "env": {
    "node": true
  },
  "settings": {
    "import/resolver": "node"
  },
  "rules": {
    "arrow-parens": [1, "as-needed"],
    "comma-dangle": [2, "never"],
    "function-paren-newline": 0,
    "global-require": 0,
    "no-unused-vars": 1,
    "spaced-comment": [
      1,
      "always",
      {
        "exceptions": ["-+"],
        "markers": ["eslint-disable", "eslint-disable-line"]
      }
    ],
    "import/no-extraneous-dependencies": [2, { "devDependencies": true }]
  }
}
